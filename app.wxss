/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

.fontTitle{
  font-size: 32rpx;
  font-weight: 600;
  color: #303133;
}

.fontItemDetail, .fontClass{
  font-size: 28rpx;
  color: #606266;
}

.fontDetail{
  font-size: 30rpx;
  color: #303133;
}

.fontPrice{
  color: #FF0000;
  font-size: 32rpx;
}

.fontDate, .fontNickname{
  color: #303133;
  font-size: 26rpx;
}

input{
  background-color: #fff;
  border-radius: 4px;
  border: 1px solid #dcdfe6;
  box-sizing: border-box;
  color: #606266;
  font-size: 28rpx;
  padding: 0 15px;
  height:65rpx;
}
