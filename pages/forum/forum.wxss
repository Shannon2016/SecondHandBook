/*搜索框部分*/

.search {
    display: flex;
    width: 100%;
    height: 286rpx;
    position: fixed;
    z-index: 2;
}

.search image {
    width: 100%;
    height: 100%;
}

.search-box {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 64rpx;
    position: absolute;
    margin-top: 46rpx;
}

.search-box-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 676rpx;
    height: 100%;
    border: 2rpx solid #dcdfe6;
    border-radius: 5px;
    background-color: #f0f0f0;
}

.search-item {
    display: flex;
    width: 100%;
    flex-direction: row;
}

.search-item image {
    height: 44rpx;
    width: 44rpx;
    align-self: center;
    margin-left: 40rpx;
    margin-right: 16rpx;
}

.search-item input {
    /* 可以让输入框的输入到末尾 */
    flex: 1;
    font-size: 28rpx;
    line-height: 40rpx;
}

/*列表*/

.forum {
    width: 100%;
    position: absolute;
    margin-top: 286rpx;
}

.forum-detail-item{
    display: flex;
    flex-direction: column;
    width: 100%;
    min-height: 260rpx;
    border-bottom: 2rpx solid #dcdfe6;
    position: relative;
    widows: 100%;
}

.forum-detail-username{
    display: flex;
    flex-direction: row;
    position: absolute;
    top: 15rpx;
    margin-left: 50rpx;
    width: calc(100% - 100rpx);
    height:50rpx;
    /* padding:0 50rpx; */
}

.forum-detail-username image {
    width: 48rpx;
    height: 48rpx;
}

.forum-detail-level image{
    position: absolute;
    z-index: 0;
    margin-left: 10rpx;
}

.forum-detail-level text{
    position: absolute;
    text-align: center;
    line-height: 48rpx;
    z-index: 1;
    width:45rpx;
    color: white;
    font-weight: bold;
    margin-left: 10rpx;
}

.forum-detail-title{
    position: absolute;
    top:70rpx;
    min-height: 140rpx;
    margin-left: 50rpx;
    margin-right: 50rpx;
    width: calc(100% - 100rpx);
    word-wrap: break-word;
}

.forum-detail-date{
    position: absolute;
    bottom: 10rpx;
    min-height: 50rpx;
    margin-left: 50rpx;
    width: calc(100% - 100rpx);
    /* padding:0 50rpx; */
}
