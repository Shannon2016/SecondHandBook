/*
    搜索框部分
*/

.search {
    display: flex;
    width: 100%;
    height: 286rpx;
    position: fixed;
    z-index: 1;
}

.search image {
    width: 100%;
    height: 100%;
}

.input-box {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 64rpx;
    position: absolute;
    margin-top: 46rpx;
}

.input-box input {
    width: 676rpx;
    height: 100%;
    border: 1px solid #bbb;
    border-radius: 5px;
    background-color: #f0f0f0;
}

/*
    分类查询部分
*/

.classify {
    width: 100%;
    height: 240rpx;
    background-color: #252424;
    position: fixed;
    margin-top: 286rpx;
    z-index: 1;
}

.books {
    width: 100%;
    position: absolute;
    margin-top: 526rpx;
}

.book-detail {
    width: 100%;
    height: 260rpx;
    margin-bottom: 5rpx;
    background-color: #d11515;
}
