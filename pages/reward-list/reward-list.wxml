<!-- 搜索框部分 -->
<view class='search'>
    <image src='/image/3.jpg'></image>
    <view class='search-box'>
        <view class='search-box-item'>
            <view class='search-item'>
                <image src='/image/search.png'></image>
                <input placeholder='关键词'></input>
            </view>
        </view>
    </view>
</view>


<!-- 显示列表 -->
<view class='books'>
    <block wx:for='{{books}}'>
        <view class='book-detail'>
            <view class='book-detail-picture'>
                <image src='{{item.picSrc}}'></image>
            </view>

            <view class='book-detail-item'>
                <text class='book-detail-name'>{{item.name}}</text>
                <view class='book-detail-info'>
                    <text>{{"作者："+item.author}}</text>
                    <text>{{"出版社："+item.press}}</text>
                </view>
                <text class='book-detail-price'
             decode='true'>{{"￥&nbsp;"+item.price}}</text>
            </view>

              <button class='book-detail-sell'><text>去卖此书</text></button>
        </view>

      
    </block>
</view>