/*
    搜索框部分
*/

.search {
    display: flex;
    width: 100%;
    height: 286rpx;
    position: fixed;
    z-index: 1;
}

.search image {
    width: 100%;
    height: 100%;
}

.search-box {
    display: flex;
    justify-content: center;
    width: 100%;
    height: 64rpx;
    position: absolute;
    margin-top: 46rpx;
}

.search-box-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 676rpx;
    height: 100%;
    border: 1px solid #bbb;
    border-radius: 5px;
    background-color: #f0f0f0;
}

.search-item {
    display: flex;
    width: 100%;
    flex-direction: row;
}

.search-item image {
    height: 44rpx;
    width: 44rpx;
    align-self: center;
    margin-left: 40rpx;
    margin-right: 16rpx;
}

.search-item input {
    /* 可以让输入框的输入到末尾 */
    flex: 1;
    font-size: 28rpx;
    line-height: 40rpx;
}

/*
    显示列表
*/

.books {
    width: 100%;
    position: absolute;
    margin-top: 286rpx;
}

.book-detail {
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 260rpx;
    margin-bottom: 5rpx;
    border-top: 2rpx solid #dcdfe6;
}

.book-detail-picture {
    display: flex;
    align-items: center;
    width: 220rpx;
    height: 100%;
}

.book-detail-picture image {
    width: 100%;
    height: 240rpx;
    margin-bottom: 8rpx;
}

.book-detail-item {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    margin-left: 20rpx;
}

.book-detail-name {
    margin: 20rpx 0;
    font-size: 36rpx;
    font-weight: bold;
}

.book-detail-info {
    display: flex;
    flex-direction: column;
    align-self: flex-start;
    height: 100%;
    font-size: 28rpx;
    color: #757575;
}

.book-detail-sell {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    width: 100%;
    height: 54rpx;
    margin-bottom: 42rpx;
}

.book-detail-price {
    font-size: 28rpx;
    color: #e51c23;
    margin-bottom: 20rpx;
}

.book-detail-sell {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 175rpx;
    height: 54rpx;
    background-color: #07a2a4;
    border-radius: 10rpx;
    border: 2rpx solid #bbb;
    right: 48rpx;
    margin-top: 195rpx;
}

.book-detail-sell text {
    margin: 0;
    text-align: center;
    line-height: 40rpx;
    font-size: 28rpx;
    color: #fff;
}