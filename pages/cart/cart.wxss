/* pages/Cart/Cart.wxss */

#topImg{
  height:300rpx;
  width: 100%;
}

.cartListItem{
  display: flex;
  flex-direction:row;
  width: 100%;
  height:250rpx;
  border-bottom: 2rpx solid #909399;
  margin-bottom: 10rpx;
}

.checkBtnContainer{
  width:10%;
  height:100%;
  /* background-color: #FF0000; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.picContainer{
  width:30%;
  height: 100%;
  /* background-color: #00FF00; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.infoContainer{
  width:60%;
  height:100%;
  /* background-color: #0000FF; */
  display: flex;
  flex-direction:column;
  font-size: 30rpx!important;
  padding-left: 30rpx;
  position: relative;
}

checkbox{
  width:48rpx !important;
}

.pictures{
  height:calc(100% - 30rpx); 
  width: 100%;
}

.infoAuthorContainer{
  display: flex;
  flex-direction:row;
  margin-top: 10rpx;
}

.infoPressContainer{
  display: flex;
  flex-direction:row;
  margin-top: 5rpx;
}

.infoPriceContainer{
  display: flex;
  flex-direction:row;
  margin-bottom: 5rpx;
  position: absolute;
  bottom: 20rpx;
}

.infoNameContainer{
  margin-top: 16rpx;
}
